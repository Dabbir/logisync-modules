<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Logistics Order View -->
  <record id="view_logistics_order_form" model="ir.ui.view">
    <field name="name">logistics.order.form</field>
    <field name="model">logistics.order</field>
    <field name="arch" type="xml">
      <form string="Pesanan">
        <group>
          <field name="name" />
          <field name="customer_id" />
          <field name="status" />
          <field name="tracking_number" />
          <field name="delivery_address" />
          <field name="order_date" />
          <field name="total_amount" />
          <field name="estimate_delivery_time" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_order" model="ir.actions.act_window">
    <field name="name">Pesanan</field>
    <field name="res_model">logistics.order</field>
    <field name="view_mode">form</field>
  </record>

  <!-- Logistics Shipment View -->
  <record id="view_logistics_shipment_form" model="ir.ui.view">
    <field name="name">logistics.logistics.form</field>
    <field name="model">logistics.logistics</field>
    <field name="arch" type="xml">
      <form string="Riwayat Pengiriman">
        <group>
          <field name="name" />
          <field name="order_id" />
          <field name="timestamp" />
          <field name="location" />
          <field name="status" />
          <field name="note" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_shipment" model="ir.actions.act_window">
    <field name="name">Riwayat Pengiriman</field>
    <field name="res_model">logistics.logistics</field>
    <field name="view_mode">form</field>
  </record>

  <!-- Logistics Transaction View -->
  <record id="view_logistics_transaction_form" model="ir.ui.view">
    <field name="name">logistics.transaction.form</field>
    <field name="model">logistics.transaction</field>
    <field name="arch" type="xml">
      <form string="Transaksi Pembayaran">
        <group>
          <field name="name" />
          <field name="order_id" />
          <field name="transaction_date" />
          <field name="payment_status" />
          <field name="payment_method" />
          <field name="amount" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_transaction" model="ir.actions.act_window">
    <field name="name">Transaksi</field>
    <field name="res_model">logistics.transaction</field>
    <field name="view_mode">form</field>
  </record>

  <!-- Logistics Partner View -->
  <record id="view_logistics_partner_form" model="ir.ui.view">
    <field name="name">logistics.partner.form</field>
    <field name="model">logistics.partner</field>
    <field name="arch" type="xml">
      <form string="Mitra Logistik">
        <group>
          <field name="name" />
          <field name="contact_info" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_partner" model="ir.actions.act_window">
    <field name="name">Mitra Logistik</field>
    <field name="res_model">logistics.partner</field>
    <field name="view_mode">form</field>
  </record>

  <!-- Logistics Performance View -->
  <record id="view_logistics_performance_form" model="ir.ui.view">
    <field name="name">logistics.performance.form</field>
    <field name="model">logistics.performance</field>
    <field name="arch" type="xml">
      <form string="Performa Logistik">
        <group>
          <field name="date_range_start" />
          <field name="date_range_end" />
          <field name="on_time_rate" />
          <field name="avg_delivery_time" />
          <field name="avg_estimated_delivery_time" />
          <field name="logistics_cost_per_order" />
          <field name="total_orders" />
          <field name="logistics_partner_id" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_performance" model="ir.actions.act_window">
    <field name="name">Performa</field>
    <field name="res_model">logistics.performance</field>
    <field name="view_mode">form</field>
  </record>

  <!-- Logistics Staff View -->
  <record id="view_logistics_staff_form" model="ir.ui.view">
    <field name="name">logistics.staff.form</field>
    <field name="model">logistics.staff</field>
    <field name="arch" type="xml">
      <form string="Staf Logistik">
        <group>
          <field name="user_id" />
          <field name="contact_number" />
          <field name="position" />
          <field name="assigned_area" />
          <field name="schedule" />
        </group>
      </form>
    </field>
  </record>

  <record id="action_logistics_staff" model="ir.actions.act_window">
    <field name="name">Staf Logistik</field>
    <field name="res_model">logistics.staff</field>
    <field name="view_mode">form</field>
  </record>

</odoo>